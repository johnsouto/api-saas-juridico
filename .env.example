# Infra / Docker Compose
ENV=dev

POSTGRES_DB=juridico_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

MINIO_ROOT_USER=minio
MINIO_ROOT_PASSWORD=minio123456
S3_BUCKET_NAME=juridico-files

# Backend
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/juridico_db
JWT_SECRET_KEY=change-me
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Session policy (idle timeout for refresh tokens)
FREE_IDLE_TIMEOUT_HOURS=12
PLUS_IDLE_TIMEOUT_DAYS=30
CORS_ORIGINS=["http://localhost","https://localhost"]

S3_ENDPOINT_URL=http://minio:9000
S3_PUBLIC_ENDPOINT_URL=http://localhost:9000
S3_REGION=us-east-1
S3_USE_SSL=false
S3_VERIFY_SSL=false

SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM=noreply@local
EMAIL_FROM_NAME=SaaS Juridico

# Cloudflare Turnstile (anti-bot) - optional (recommended in production)
# Create keys at: https://dash.cloudflare.com/turnstile
TURNSTILE_SECRET_KEY=

# Telegram alerts (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

SEED_ON_STARTUP=true
PLATFORM_ADMIN_KEY=024816Admin22547863@

# Public URL (used in emails)
PUBLIC_APP_URL=http://localhost

# Traefik / Let's Encrypt (production)
# Used by docker-compose.prod.yml
LETSENCRYPT_EMAIL=

# Billing
BILLING_PROVIDER=FAKE
# Optional shared secret for /api/v1/billing/webhook/* endpoints (recommended in production)
BILLING_WEBHOOK_SECRET=

# Frontend
NEXT_PUBLIC_API_BASE_URL=/api
NEXT_PUBLIC_TURNSTILE_SITE_KEY=
